<h1>New Post</h1>
<%= render 'layouts/errors', obj: @post_image %>

<%= form_with model: @post_image do |f| %>
  <h4>Image</h4>
  <%= f.file_field :image, accept: "image/*" %>
  <h4>Shop</h4>
  <%= f.text_field :shop_name %>
  <h4>Caption</h4>
  <%= f.text_area :caption %><br>
  <%= f.submit "Create" %>
<% end %>
